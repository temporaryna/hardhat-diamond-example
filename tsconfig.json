{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["ESNext"],
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "skipLibCheck": true,

    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "noEmit": true,
    "composite": true,
    "downlevelIteration": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
  },
  "include": [
    "./deploy",
    "./test",
    "./scripts",
    "./tasks",
    "./types",
    "./utils"
  ],
  "files": [
    "./hardhat.config.ts"
  ]
}
